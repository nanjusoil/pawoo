- content_for :page_title do
  = t('admin.suggestion.title')

%from
  %table.table
    %thead
      %tr
        %th 優先順位
        %th ハッシュタグ
        %th 説明文
        %th
        %th
    %tbody
      - @suggestion_tags.each do |tag|
        %tr
          %td= tag.order
          %td= tag.name
          %td= tag.description
          %td
            = link_to edit_admin_suggestion_tag_path(tag), class: 'table-action-link' do
              %i.fa.fa-pencil-square-o
              編集する
          %td
            = link_to admin_suggestion_tag_path(tag), method: :delete, class: 'table-action-link' do
              %i.fa.fa-trash
              削除する
  = link_to '追加', new_admin_suggestion_tag_path, class: 'button'
